.login-container {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.login-container .logo {
  margin-top: 180rpx;
  width: 212rpx;
  height: 212rpx;
}

.login-container .title {
  color: #333;
  font-size: 24px;
  margin-top: 20rpx;
}

.login-container .login-tips {
  margin-top: 30rpx;
  height: 34rpx;
  width: 292rpx;
  position: relative;
}

.login-container .wx-login-button {
  margin-top: 200rpx;
  width: 568rpx;
  height: 98rpx;
  padding: 0;
  border: none;
}

.login-container .wx-login-img {
  width: 568rpx;
  height: 98rpx;
}

.phone-login {
  margin-top: 40rpx;
  color: #333;
  font-size: 15px;
}

.login-container .bottom-tip {
  color: #a8a8a8;
  font-size: 10px;
  position: absolute;
  bottom: 40rpx;
}
